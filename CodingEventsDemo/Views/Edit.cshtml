<h1>Edit Event</h1>

<form method="post" action="/Events/Edit">
    <input type="hidden" name="id" value="@ViewBag.eventToEdit.Id" />
    <div class="form-group">
        <label>
            Name <input name="name" type="text" value="@ViewBag.eventToEdit.Name" />
        </label>
    </div>
    <div class="form-group">
        <label>
            Description <input name="description" type="text" value="@ViewBag.eventToEdit.Description" />
        </label>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Changes" />
    </div>
</form>